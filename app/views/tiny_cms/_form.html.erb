<% form_for resource do |f| %>
  <%= f.error_messages %>
  
  <p>
    Path: <%= resource.path %>
  </p>
  
  <p>
    <%= f.label :dynamic_route %>
    <%= f.text_field :dynamic_route %>
  </p>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :permalink %>
    <%= f.text_field :permalink %>
  </p>
  
  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
